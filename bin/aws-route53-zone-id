#!/bin/bash

DOMAIN=$1

if [[ -z "$DOMAIN" ]]; then
  source $(dirname $0)/lib/prompt.sh
  prompt "Domain" "" "DOMAIN"
fi

#aws route53 list-hosted-zones --output text | grep $DOMAIN | awk '{ print $3 }' | sed 's/\/hostedzone\/\(.*\)/\1/'

aws route53 list-hosted-zones \
  --output text \
  --query 'HostedZones[?Name==`'$DOMAIN'.`].Id'
