#!/bin/bash

DIR=$(dirname $0)
source $DIR/../lib/prompt.sh

STACK=$1
if [[ -z "$STACK" ]]; then
  aws-cloudformation-list
  prompt "Stack" "" "STACK"
fi

MAX=$2
if [[ -z "$MAX" ]]; then
  MAX=20
fi
aws cloudformation describe-stack-events --stack-name $STACK \
  --query 'StackEvents[].{ ResourceId:LogicalResourceId, Status:ResourceStatus, Reason:ResourceStatusReason}' \
  --max-items $MAX \
  --output table


